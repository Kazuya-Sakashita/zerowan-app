<div class="container">
<!--  データ確認の表示-->
  <h2>入力情報の確認</h2>
  <div class="signup-confirm rounded mt-5">
    <table>
      <tr>
        <td>メールアドレス</td>
        <td class="px-3"><%= @user.email %></td>
      </tr>
      <tr>
        <td> パスワード</td>
        <td class="px-3"><%= @user.password %></td>
      </tr>
      </tr>
      <tr>
        <td> お名前</td>
        <td class="px-3"><%= @user.profile.name %></td>
      </tr>
      </tr>
      <tr>
        <td> ご住所</td>
        <td class="px-3"><%= @user.profile.address %></td>
      </tr>
      </tr>
      <tr>
        <td> お電話番号</td>
        <td class="px-3"><%= @user.profile.phone_number %></td>
      </tr>
      <tr>
        <td> お誕生日</td>
        <td class="px-3"><%= @user.profile.birthday.strftime("%Y年%m月%d日") %></td>
      </tr>
      <tr>
        <td> 飼育経験</td>
        <td class="px-3"><%= @user.profile.breeding_experience %></td>
      </tr>

    </table>
<!--データ表示終了-->
<!--    データをhidden_fieldで渡す、登録ボタン、修正するボタンを使用-->
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= f.hidden_field :email, value: @user.email, readonly: true %>
      <%= f.hidden_field :password, value: @user.password, readonly: true %>
      <%= f.fields_for :profile, @profile do |profile_fields| %>
        <%= profile_fields.hidden_field :name, value: @user.profile.name, readonly: true %>
        <%= profile_fields.hidden_field :address, value: @user.profile.address, readonly: true %>
        <%= profile_fields.hidden_field :phone_number, value: @user.profile.phone_number, readonly: true %>
        <%= profile_fields.hidden_field :birthday, value: @user.profile.birthday, readonly: true %>
        <%= profile_fields.hidden_field :breeding_experience, value: @user.profile.breeding_experience, readonly: true %>
      <% end %>
      <%= f.submit '登録', class: 'btn btn-lg comfirm-btn btn-block' %>
      <%= f.submit '修正', name: :back, class: 'btn btn-lg comfirm-back-btn btn-block mt-1' %>
    <% end %>
  </div>
</div>
