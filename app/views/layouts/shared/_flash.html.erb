<% if flash[:notice] %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-danger">
    <% if alert.instance_of?(Array) %>
      <% alert.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% else %>
      <li><%= alert %></li>
    <% end %>
  </div>
<% end %>