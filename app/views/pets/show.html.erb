<div class="container">
  <div class="row">
    <!-- ペット画像表示 -->
    <div class="col-lg-6 align-self-center">
      <div class="row ">
        <% @pet_images.each do |image| %>
          <%= image_tag image.photo.to_s, class: "col-6 p-0 pet-image" %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-6">
      <%= render partial: 'rooms/status_button', locals: { pet: @pet, current_user: current_user } %>
    <!-- ペット詳細情報表示 -->
      <%= render partial: 'pets/pet_table', locals: { pet: @pet, current_user: current_user } %>

      <div>
        <%= render partial: 'pets/favorite_button', locals: { pet: @pet, current_user: current_user } %>
        <%= render partial: 'pets/send_message_button', locals: { pet: @pet, current_user: current_user } %>
      </div>
    </div>
    <!-- ペット詳細情報表示 end -->
  </div>
</div>
