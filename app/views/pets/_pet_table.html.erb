      <div class="">
        <% if user_signed_in? && @pet.user_id == current_user.id %>
          <%= link_to 'ペット情報を編集する', edit_pet_path(@pet), class: 'btn btn-lg return-pet-edit-btn  d-block w-100 mx-auto' %>
        <% end %>
        <div class="table-responsive-sm">
          <table class="table bg-white table-bordered w-100">
            <tr>
              <td class="col-xs-3 col-ms-6 col-md-2 col-lg-2 bg-light">名前</td>
              <td class="col-xs-3 col-ms-6 col-md-4 col-lg-4"><%= @pet.petname %></td>
            </tr>
            <tr>
              <td class="col-xs-3 col-ms-6 col-md-2 col-lg-2 bg-light">性別</td>
              <td class="col-xs-3 col-ms-6 col-md-4 col-lg-4"><%= @pet.gender_i18n %></td>
            </tr>
            <tr>
              <td class="col-xs-3 col-ms-6 col-md-2 col-lg-2 bg-light">年齢</td>
              <td class="col-xs-3 col-ms-6 col-md-4 col-lg-4"><%= @pet.age %>才</td>
            </tr>
            <tr>
              <td class="col-xs-3 col-ms-6 col-md-2 col-lg-2 bg-light">種別</td>
              <td class="col-xs-3 col-ms-6 col-md-4 col-lg-4"><%= @pet.classification_i18n %></td>
            </tr>
            <tr>
              <td class="col-xs-3 col-ms-6 col-md-2 col-lg-2 bg-light">性格</td>
              <td class="col-xs-3 col-ms-6 col-md-4 col-lg-4"><%= @pet.introduction %></td>
            </tr>
            <tr>
              <td class="col-xs-3 col-ms-6 col-md-2 col-lg-2 bg-light">ワクチン有無</td>
              <td class="col-xs-3 col-ms-6 col-md-4 col-lg-4"><%= @pet.vaccination_i18n %></td>
            </tr>
            <tr>
              <td class="col-xs-3 col-ms-6 col-md-2 col-lg-2 bg-light">去勢有無</td>
              <td class="col-xs-3 col-ms-6 col-md-4 col-lg-4"><%= @pet.castration_i18n %></td>
            </tr>
            <tr>
              <td class="col-xs-3 col-ms-6 col-md-2 col-lg-2 bg-light">譲渡可能地域</td>
              <td class="col-xs-3 col-ms-6 col-md-4 col-lg-4">
                <% @pet_areas.each do |a| %>
                  <%= a.area.place_name %>
                <% end %>
              </td>
            </tr>
          </table>
        </div>
      </div>
