<h1>里親募集</h1>



<div class="form-signup rounded mt-5">
  <%= form_with model: @pet, url: pets_confirm_path, local: true do |f| %>
    <div class="form-label">
      <%= f.label :photoes %>
      <%= f.file_field :photoes, multiple: true %>
    </div>
    </div>
    <div class="form-signup rounded mt-5">
      <div class="form-label">
        <%= f.label :category %>
        <%= f.select :category, Pet.categories_i18n.invert, {}, class: 'form-control' %>
      </div>

      <div class="form-label">
        <%= f.label :petname %>
        <%= f.text_field :petname, class: 'form-control' %>
      </div>

      <div class="form-label">
        <%= f.label :gender %>
        <%= f.select :gender, Pet.genders_i18n.invert, {}, class: 'form-control' %>

        <!--　　　　　TODO セレクトボックスできているが日本語化できていいない-->
      </div>

      <div class="form-label">
        <%= f.label :age %>
        <%= f.number_field :age, autocomplete: "off", class: 'form-control' %>

      </div>

      <div class="form-label">
        <%= f.label :classification %>
        <%= f.select :classification, Pet.classifications_i18n.invert, {}, class: 'form-control' %>
      </div>


      <div class="form-label">
        <%= f.label :introduction %>
        <%= f.text_field :introduction, class: 'form-control' %>
      </div>

      <div class="form-label">
        <%= f.label :vaccination %>
        <%= f.select :vaccination, Pet.vaccinations_i18n.invert, {}, class: 'form-control' %>

      </div>

      <div class="form-label">
        <%= f.label :castration %>
        <%= f.select :castration, Pet.castrations_i18n.invert, {}, class: 'form-control' %>

      </div>

      <div class="actions">
        <%= f.submit '登録内容確認', class: 'btn btn-lg comfirm-btn btn-block' %>
      </div>
    </div>
  <% end %>
