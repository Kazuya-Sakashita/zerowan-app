<div class="container">
  <div class="form-signup-title rounded mt-5">
    <h2>里親を募集する</h2>
  </div>

  <div class="form-signup rounded mt-5">
    <%= form_with model: @pet, url: pets_path, local: true do |f| %>

      <%= f.fields_for :pet_images do |pet_image_fields| %>
        <div class="form-label">
          <%= pet_image_fields.label :image %>
          <%= pet_image_fields.file_field :image %>
        </div>

      <% end %>
      <div class="form-label">
        <%= f.label :name, 'ペットのお名前' %>
        <%= f.text_field :name, autofocus: true, autocomplete: 'name',
                         class: 'form-control' %>
      </div>
      <div>
        <%= f.label :gender, '性別' %>
        <%= f.text_field :gender, autofocus: true, autocomplete: 'gender',
                         class: 'form-control' %>
      </div>
      <div>
        <%= f.label :age, '年齢' %>
        <%= f.text_field :age, autofocus: true, autocomplete: 'age',
                         class: 'form-control' %>
      </div>
      <div>
        <%= f.label :classification, '種別' %>
        <%= f.text_field :classification, autofocus: true, autocomplete: 'classification',
                         class: 'form-control' %>
      </div>
      <div>
        <%= f.label :introduction, '紹介文' %>
        <%= f.text_field :introduction, autofocus: true, autocomplete: 'introduction',
                         class: 'form-control' %>
      </div>
      <div>
        <%= f.label :castration, '去勢有無' %>
        <%= f.text_field :introduction, autofocus: true, autocomplete: 'castration',
                         class: 'form-control' %>
      </div>
      <div>
        <%= f.label :vaccination, 'ワクチン有無' %>
        <%= f.text_field :vaccination, autofocus: true, autocomplete: 'vaccination',
                         class: 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit '登録', class: 'btn btn-lg comfirm-btn btn-block' %>

      </div>

    <% end %>

  </div>
</div>
