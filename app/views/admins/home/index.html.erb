<div class="container-fluid mx-auto">
  <div class="row col-11 mx-auto">
    <!-- 標準カラーのサイドバー -->
    <%= render 'layouts/shared/sidebar_html'%>
    <!-- /標準カラーのサイドバー -->

    <!-- 管理者画面 main -->
    <div class="col-md-8">
      <div class="row mx-auto">
        <%= link_to admins_users_path, class: 'col-md-4' do %>
          <div class="card bg-primary text-white shadow p-2">
            <p class="text-white-70">ユーザー登録数</p>
            <p class="text-white-70"><%= "#{@user_registration_count}" %>件</p>
          </div>
        <% end %>
        <%= link_to admins_pets_path, class: 'col-md-4' do %>
          <div class="card bg-primary text-white shadow p-2">
            <p class="text-white-70">里親募集数</p>
            <p class="text-white-70"><%= "#{@total_pets_for_adoption}" %>件</p>
          </div>
        <% end %>
      </div>
    </div>
    <!-- /管理者画面 main -->
  </div>
</div>